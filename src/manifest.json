{
  "manifest_version": 2,
  "name": "CHUtils",
  "version": "1.1.1",

  "description": "Utilities for cohost",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "author": "April Lunarii",

  "permissions": [
    "storage",
    "*://*.cohost.org/*"
  ],
  "web_accessible_resources": [ "*.js", "*.json", "*.css", "*.svg", ".png" ],

  "content_scripts": [
    {
      "matches": [
        "*://*.cohost.org/*"
      ],
      "run_at": "document_end",
      "js": [
        "control/content-script.js",
        "lib/jquery.min.js",
        "lib/marked.min.js",
        "lib/purify.min.js",
        "lib/luxon.min.js",
        "lib/prism.js"
      ],
      "css": ["lib/prism.css"]
    }
  ],
  "background": {
    "scripts": [
      "control/background.js"
    ]
  },

  "browser_action": {
    "default_icon" : {
      "48": "icons/icon.svg",
      "96": "icons/icon.svg"
    },
    "default_popup": "ui/menu.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "chutilz@girldragon.neocities.org",
      "strict_min_version": "121.0"
    }
  }
}
